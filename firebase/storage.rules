rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to appointment photos
    match /appointment-photos/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only functions can write
    }
    
    // Admin only access to other files
    match /{allPaths=**} {
      allow read, write: if request.auth != null && 
        (request.auth.token.admin == true || request.auth.token.email == 'tylersbangerang@gmail.com');
    }
  }
}
