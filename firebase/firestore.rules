rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Appointments collection - only admin can read/write
    match /appointments/{appointmentId} {
      allow read, write: if request.auth != null && 
        (request.auth.token.admin == true || request.auth.token.email == 'tylersbangerang@gmail.com');
    }
    
    // Admin FCM tokens - only authenticated admins can manage
    match /adminTokens/{tokenId} {
      allow read, write: if request.auth != null && 
        (request.auth.token.admin == true || request.auth.token.email == 'tylersbangerang@gmail.com');
    }
    
    // Blocked time slots - admin only
    match /blockedSlots/{slotId} {
      allow read, write: if request.auth != null && 
        (request.auth.token.admin == true || request.auth.token.email == 'tylersbangerang@gmail.com');
    }
    
    // Admin users collection - admin only
    match /adminUsers/{userId} {
      allow read, write: if request.auth != null && 
        (request.auth.token.admin == true || request.auth.token.email == 'tylersbangerang@gmail.com');
    }
  }
}
